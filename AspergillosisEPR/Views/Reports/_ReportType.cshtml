@model AspergillosisEPR.Models.Reporting.Report

<br>
<h3><strong>Step 1 </strong> - Select Report Type</h3>

<div class="row">
    <div class="col-sm-8">
        <div class="form-group">
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="fa fa-area-chart fa-lg fa-fw"></i>
                </span>
                @Html.DropDownListFor(m => m.ReportTypeId, (SelectList)ViewBag.ReportTypesIds, "Please select report type", new { @class="form-control input-lg"})
            </div>
        </div>
    </div>
</div>