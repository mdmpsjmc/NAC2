@model AspergillosisEPR.Models.Reporting.Report
<br>
<div class="col-sm-6">
    <div class="form-group">
        <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-calendar fa-lg fa-fw"></i></span>
            <input class="form-control input-lg datepicker" placeholder="Start Date" type="text" asp-for="StartDate" value="@(new DateTime(DateTime.Now.Year-1,4,1))">
            <span id="StartDate-error" class="help-block"></span>
        </div>
    </div>
</div>
<div class="col-sm-6">
    <div class="form-group">
        <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-calendar fa-lg fa-fw"></i></span>
            <input class="form-control input-lg datepicker" placeholder="End Date" type="text" asp-for="EndDate" value="@(new DateTime(DateTime.Now.Year,3,31))">
            <span id="EndDate-error" class="help-block"></span>
        </div>
    </div>
</div>
<br /> 
<h3 style="margin-left: 20px">Please search below for patients</h3>
<div class="col-sm-12">
    <div class="form-group">
        <div class="input-group" style="width: 100%">
            <select class="select2-patient-search" id="PatientIds" multiple="true" style="width: 100%">
                <option value="">Search Patient by RM2Number or Name</option>
            </select>
            <span id="PatientIds-error" class="help-block"></span>
        </div>
    </div>
</div>
<div class="form-group">
    <input type="hidden" id="Base" />
    <span id="Base-error" class="help-block" style="padding-left: 40px"></span>
</div>
