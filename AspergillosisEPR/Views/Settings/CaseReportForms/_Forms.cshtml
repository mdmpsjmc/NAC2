@model AspergillosisEPR.Models.SettingsViewModels.SettingsViewModel
<div class="table-responsive">
    @if (User.IsInRole("Create Role") || User.IsInRole("Admin Role"))
    {
        <div class="button">
            <a href="@Url.Action("New", "CaseReportForms" )" class="btn btn-success add-crf-item disable-default" data-klass="CaseReportFormSection" data-tab="case-report-forms-section">
                <i class="fa fa-plus"></i>
                Add New Form
            </a>
        </div>
    }
    <table class="table table-bordered table-hover" id="case_report_forms_datatable" data-url="/DataTableCaseReportBuiltForms/Load" style="width: 100%">
        <thead>
            <tr>
                <th>ID</th>
                <th><i class="fa fa-fw fa-lock text-muted hidden-md hidden-sm hidden-xs"></i>Locked?</th>
                <th>Name</th>
                <th>Category</th>
                <th>Sections</th>
                <th>Fields</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>