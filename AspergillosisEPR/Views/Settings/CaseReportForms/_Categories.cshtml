@model AspergillosisEPR.Models.SettingsViewModels.SettingsViewModel
<div class="table-responsive">
    @if (User.IsInRole("Create Role") || User.IsInRole("Admin Role"))
    {
        <div class="button">
            <a href="@Url.Action("New", "CaseReportFormCategories" )" class="btn btn-success add-crf-item disable-default" data-klass="CaseReportFormCategory" data-tab="case-report-form-category">
                <i class="fa fa-plus"></i> 
                Add New Category
            </a>
        </div>
    }
    <table class="table table-bordered table-hover" id="case_report_forms_categories_datatable" data-url="/DataTableCaseReportForms/Load?collection=CaseReportFormCategory" style="width: 100%">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>
