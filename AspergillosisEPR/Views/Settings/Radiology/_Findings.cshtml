@model AspergillosisEPR.Models.SettingsViewModels.SettingsViewModel
<div class="table-responsive">
    @if (User.IsInRole("Create Role") || User.IsInRole("Admin Role"))
    {
        <div class="button">
            <a href="@Url.Action("New", "Radiology")" class="btn btn-success add-finding add-settings-item disable-default" data-klass="Finding" data-tab="findings">
                <i class="fa fa-plus"></i> Add new Finding
            </a>
        </div>
    }
    <table class="table table-bordered table-hover" id="findings_datatable" style="width: 100%" data-url="/DataTableRadiology/Load?collection=Finding">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>