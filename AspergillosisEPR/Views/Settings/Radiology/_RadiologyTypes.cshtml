@model AspergillosisEPR.Models.SettingsViewModels.SettingsViewModel
<div class="table-responsive">
    @if (User.IsInRole("Create Role") || User.IsInRole("Admin Role"))
    {
        <div class="button">
            <a href="@Url.Action("New", "Radiology" )" class="btn btn-success add-radiology-type add-settings-item disable-default" data-klass="RadiologyType" data-tab="radiology-types">
                <i class="fa fa-plus"></i> Add New Radiology Type
            </a>
        </div>
    }
    <table class="table table-bordered table-hover" id="radiology_types_datatable" data-url="/DataTableRadiology/Load?collection=RadiologyType" style="width: 100%">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>