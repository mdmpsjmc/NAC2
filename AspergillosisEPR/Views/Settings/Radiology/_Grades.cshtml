@model AspergillosisEPR.Models.SettingsViewModels.SettingsViewModel
<div class="table-responsive">
    @if (User.IsInRole("Create Role") || User.IsInRole("Admin Role"))
    {
        <div class="button">
            <a href="@Url.Action("New", "Radiology")" class="btn btn-success add-grade add-settings-item disable-default" data-klass="Grade" data-tab="grades">
                <i class="fa fa-plus"></i> Add New Grade
            </a>
        </div>
    }
    <table class="table table-bordered table-hover" id="grades_datatable" data-url="/DataTableRadiology/Load?collection=Grade" style="width: 100%">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>