@model AspergillosisEPR.Models.SettingsViewModels.RadiologyViewModel
<div class="modal fade edit-settings-modal" tabindex="-1" role="dialog" id="new-radiology-modal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">Edit Item</h4>
            </div>
            <div class="modal-body">
                <div class="widget-body">
                    <form asp-controller="Radiology" asp-action="Edit" class="smart-form settings-form" data-ajax="true" data-ajax-method="POST" id="edit-radiology-form">
                        <fieldset>
                            <div class="row">
                                <label class="input" for="Name">
                                    <i class="icon-append fa fa-info-circle"></i>
                                    <input type="hidden" value="@Model.ID" name="RadiologyViewModel.ID" />
                                    <input type="hidden" value="@Model.Klass" name="RadiologyViewModel.Klass" />
                                    <input placeholder="Enter Item Name" name="RadiologyViewModel.Name" value="@(Model.Name)">
                                    <span class="text-danger"></span>
                                </label>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-success submit-settings-item" data-tab="radiology">Update</button>
            </div>
        </div>
    </div>
</div>