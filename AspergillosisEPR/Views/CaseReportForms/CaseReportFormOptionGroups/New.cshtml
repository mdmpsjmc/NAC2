@model AspergillosisEPR.Models.CaseReportForms.ViewModels.CaseReportFormOptionGroupViewModel;
<div class="modal fade new-settings-modal" tabindex="-1" role="dialog" id="new-case-report-form-option-group">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">@Model.FormAction  Case Report Form Option Group</h4>
            </div>
            <div class="modal-body">
                <div class="widget-body">
                    <form asp-controller="CaseReportFormOptionGroups" asp-action="@Model.FormAction" class="smart-form settings-form" data-ajax="true" data-ajax-method="POST" id="new-case-report-form-option-group">
                        <fieldset>
                            <div class="row">
                                <label class="input" asp-for="Name">
                                    <i class="icon-append fa fa-info-circle"></i>
                                    <input placeholder="Enter option group name" asp-for="Name">
                                    <span class="text-danger"></span>
                                </label>
                            </div>
                            <div class="row" style="margin-top: 20px !important;min-width: 500px !important">
                                <label class="select" asp-for="Options">
                                    <select multiple="multiple" asp-for="Options" class="form-control select2" name="Options[]" id="Options" style="min-width: 500px">                                        
                                        @if(Model.Options != null)
                                        {
                                            @foreach(var option in Model.Options)
                                            {
                                                <option value="@option">@option</option>

                                            }

                                        }
                                    </select>
                                    <span class="text-danger"></span>
                                </label>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-success submit-settings-item" data-tab="crfs">SAVE</button>
            </div>
        </div>
    </div>
</div>