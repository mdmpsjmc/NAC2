@model AspergillosisEPR.Models.PatientViewModels.PatientDetailsViewModel
@if (Model.ShowButtons)
{
    <div class="col-sm-12" id="sgrq-chart">
        <a href="@Url.Action("SGRQ", "Charts", new { patientId= Model.Patient.ID})" data-id="@(Model.Patient.ID)" class="pdf-hide btn-hide btn-lg disable-default btn btn-primary show-sgrq-chart" style="padding: 5px">
            <i class="fa fa-line-chart"></i>&nbsp; Show Chart
        </a>
    </div>
}
@if (Model.STGQuestionnaires != null && Model.STGQuestionnaires.Any())
{
    <div class="col-sm-12">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Date Taken</th>
                    <th>Symptopms</th>                    
                    <th>Impact</th>
                    <th>Activity</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var stg in Model.STGQuestionnaires.OrderByDescending(q => q.DateTaken))
                {
                    <tr>
                        <td>@(stg.ID)</td>
                        <td>@(stg.DateTaken.ToString("dd-MMM-yyyy"))</td>
                        <td>@(stg.SymptomScore)</td>
                        <td>@(stg.ImpactScore)</td>
                        <td>@(stg.ActivityScore)</td>                        
                        <td>@(stg.TotalScore)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="col-sm-12">
        <div class="alert alert-info alert-block">
            <h4 class="alert-heading">Info!</h4>
            <i class="fa fa-info-circle"></i>
            This patient does not have any associated St Georges Questionnaires  
        </div>
    </div>
}
