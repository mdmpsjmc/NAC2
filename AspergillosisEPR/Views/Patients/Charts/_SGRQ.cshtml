@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AspergillosisEPR.TagHelpers
@addTagHelper *, AspergillosisEPR.Helpers
@addTagHelper *, AspergillosisEPR
<div id="sgrq-chart-@(Model.Patient.ID)" class="printable modal fade sgrq-modal" data-id="@(Model.Patient.ID)">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h3 class="modal-title">
                    <chartheader is-anonymous="@User.IsInRole("Anonymous Role")" 
                                 anonymous-only="@(!(User.IsInRole("Read Role")))"
                                 chart-name="SGRQ chart"
                                 full-name="@Model.Patient.FullName"
                                 rm2-number="@Model.Patient.RM2Number"
                                 identity ="@Model.Patient.ID"/>                   
                </h3>
            </div>
            <div class="modal-body"> 
                <canvas id="sgrq-chart-content-popup" width="800" height="400"></canvas>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="window.print();"><i class="fa fa-print"></i>&nbsp; Print</button>
                <button type="button" class="btn btn-default" data-dismiss="modal" onclick="$('div.modal-backdrop.in').remove()"><i class="fa fa-close"></i>&nbsp; Close Chart</button>
            </div>
        </div >
    </div >
</div >