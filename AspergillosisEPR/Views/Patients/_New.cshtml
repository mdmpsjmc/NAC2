@model AspergillosisEPR.Models.Patient
<div class="modal fade" tabindex="-1" role="dialog" id="new-patient-modal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">Add New Patient</h4>
            </div>
            <div class="modal-body">
                <div class="widget-body">
                    Add new patient to database
                    <hr class="simple">
                    <ul id="new-patient-tabs" class="nav nav-tabs bordered">
                        <li class="active">
                            <a href="#details" data-toggle="tab"><i class="fa fa-fw fa-lg fa-info-circle"></i> Details </a>
                        </li>
                        <li>
                            <a href="#diagnosis" data-toggle="tab"><i class="fa fa-fw fa-lg fa-heartbeat"></i> Diagnosis</a>
                        </li>
                        <li>
                            <a href="#drugs" data-toggle="tab"><i class="fa fa-fw fa-lg fa-medkit"></i> Drugs</a>
                        </li>
                        <li>
                            <a href="#stg" data-toggle="tab"><i class="fa fa-fw fa-lg fa-file-text"></i> SGRQ</a>
                        </li>
                        <li>
                            <a href="#ig" data-toggle="tab">
                                <span class="mi-blood-transfusion-3870 tab-styled-custom">
                                    <span class="path2"></span>
                                    <span class="fa-fw fa-lg path3"></span>
                                </span> Ig
                            </a>
                        </li>
                        <li>
                            <a href="#radiology" data-toggle="tab"><i class="fa fa-fw fa-lg fa-stethoscope"></i> Radiology</a>
                        </li>
                        <li>
                            <a href="#medical-trials" data-toggle="tab">
                                <span class="mi-patient-chart-3879 tab-styled-custom2">
                                  <span class="path2"></span>
                                </span> Trials
                            </a>
                        </li>
                        <li>
                            <a href="#case-report-forms" data-toggle="tab"><i class="fa fa-fw fa-lg fa-th-list"></i> Case Report Forms</a>
                        </li>
                    </ul>
                    <form asp-controller="Patients" asp-action="Create" class="smart-form" data-ajax="true" data-ajax-method="POST" id="new-patient-form">
                        <div id="new-patient-tab-content" class="tab-content padding-10">
                            <div class="tab-pane fade in active" id="details">
                                @{ await Html.RenderPartialAsync("/Views/Patients/_DetailsTab.cshtml"); }
                            </div>
                            <div class="tab-pane fade" id="diagnosis">
                                @{ await Html.RenderPartialAsync("/Views/Patients/_DiagnosisTab.cshtml"); }
                            </div>
                            <div class="tab-pane fade" id="drugs">
                                @{ await Html.RenderPartialAsync("/Views/Patients/_DrugsTab.cshtml"); }
                            </div>
                            <div class="tab-pane fade" id="stg">
                                @{ await Html.RenderPartialAsync("/Views/Patients/_STGQuestionnaire.cshtml"); }
                            </div>
                            <div class="tab-pane fade" id="ig">
                                @{ await Html.RenderPartialAsync("/Views/Patients/_IgTab.cshtml"); }
                            </div>
                            <div class="tab-pane fade" id="radiology">
                                @{ await Html.RenderPartialAsync("/Views/Patients/_RadiologyTab.cshtml"); }
                            </div>
                            <div class="tab-pane fade" id="medical-trials">
                                @{ await Html.RenderPartialAsync("/Views/Patients/_MedicalTrials.cshtml"); }
                            </div>
                            <div class="tab-pane fade" id="case-report-forms">
                                @{ await Html.RenderPartialAsync("/Views/Patients/CaseReportForms/_New.cshtml"); }
                            </div>
                        </div>
                       </form>
                    </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-success submit-new-patient">SAVE</button>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}