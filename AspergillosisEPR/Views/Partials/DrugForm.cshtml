@using HtmlHelpers.BeginCollectionItemCore;
@model AspergillosisEPR.Models.Patients.PatientDrug;
@using (Html.BeginCollectionItem("Drugs"))
{
    <div class="drug-row">
        <fieldset>
            <div class="row">
                <label class="select">
                    <label asp-for="DrugId" class="select">
                        @Html.DropDownListFor(m => m.DrugId, (SelectList)ViewBag.DrugId, "Select Drug")
                        <i></i>
                        <span asp-validation-for="DrugId" class="text-danger"></span>
                    </label>
                </label>
            </div>
        </fieldset>
        <section class="col col-6">
            <label asp-for="StartDate" class="input">
                <i class="icon-append fa fa-calendar"></i>
                <input asp-for="StartDate" placeholder="Start date" class="datepicker">
            </label>
        </section>
        <section class="col col-6">
            <label asp-for="EndDate" class="input">
                <i class="icon-append fa fa-calendar"></i>
                <input asp-for="EndDate" placeholder="End date" class="datepicker">
            </label>
        </section>
        <div class="row">
            <label class="select side-effects">
                <label asp-for="SideEffects" class="select">
                    <p>Please select drug side effects from the list (if applicable)</p>
                    @Html.DropDownListFor(m => m.SideEffects, (MultiSelectList)ViewBag.SideEffects, new {multiple = "multiple", @class = "select2", @data_placeholder="Type side effect name to start search"})
                    <span asp-validation-for="SideEffects" class="text-danger"></span>
                </label>
            </label>
        </div>
        <div class="row">
            <a href="javascript:void(0)" class="btn btn-danger remove-new-drug pull-right btn-lg" data-what="drug" data-toggle="tooltip" data-title="Remove drug" style="padding: 5px">
                <i class="fa fa-trash"></i>
            </a>
        </div>
    </div>

}