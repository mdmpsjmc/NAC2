@model AspergillosisEPR.Models.Patients.PatientMedicalTrial
@using HtmlHelpers.BeginCollectionItemCore;
@using (Html.BeginCollectionItem("PatientMedicalTrial"))
{
<div class="patient-medical-trail">
    <fieldset>
        <div class="row">
            <section class="col col-6">
                <label asp-for="MedicalTrialId" class="select">
                    <select asp-for="MedicalTrialId" asp-items="(SelectList)ViewBag.MedicalTrialsIds">
                        <option value="">Select Medical Trail</option>
                    </select>
                    <i class="icon-append fa fa-user"></i>
                </label>
            </section>    
            <section class="col col-6">
                <label asp-for="PatientMedicalTrialStatusId" class="select">
                    <select asp-for="PatientMedicalTrialStatusId" asp-items="(SelectList)ViewBag.PatientMedicalTrialStatusesIds">
                        <option value="">Select Patient Status</option>
                    </select>
                    <i class="icon-append fa fa-user"></i>
                </label>
            </section>           
        </div> 
    </fieldset>
    <fieldset>
        <section class="col col-6">
            <label asp-for="Consented" class="checkbox">
                <input type="checkbox" asp-for="Consented">
                <i></i> Patient Consented?
            </label>
        </section>
        <section class="col col-4">
            <label asp-for="ConsentedDate" class="input">
                <i class="icon-append fa fa-calendar"></i>
                <input asp-for="ConsentedDate" placeholder="Consented date"  class="datepicker" type="text">
            </label>
        </section>
    </fieldset>
    <fieldset>
        <div class="row">
            <section class="col col-6">
                <label asp-for="IdentifiedDate" class="input">
                    <i class="icon-append fa fa-calendar"></i>
                    <input asp-for="IdentifiedDate" placeholder="Identified date" class="datepicker" type="text">
                </label>
            </section>         
            <section class="col col-6">
                <label asp-for="RecruitedDate" class="input">
                    <i class="icon-append fa fa-calendar"></i>
                    <input asp-for="RecruitedDate" placeholder="Recruited date" class="datepicker" type="text">
                </label>
            </section>
            <section class="col col-4">
            </section>
        </div>
</fieldset>
    <div class="row">
        <a href="javascript:void(0)" class="btn btn-danger remove-new-stg pull-right btn-lg" data-what="Patient Trial Enrollment" data-toggle="tooltip" data-title="Remove Patient Trial Enrollment" style="padding: 5px">
            <i class="fa fa-trash"></i>
        </a>
    </div>
</div>
}