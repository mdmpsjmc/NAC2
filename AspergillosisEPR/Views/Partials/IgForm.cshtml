@model AspergillosisEPR.Models.Patients.PatientImmunoglobulin
@using HtmlHelpers.BeginCollectionItemCore;
@using (Html.BeginCollectionItem("PatientImmunoglobulin"))
{
    <fieldset>
        <div class="row">
            <section class="col col-4">
                <label class="select">
                    <label asp-for="ImmunoglobulinTypeId" class="select">
                        @Html.DropDownListFor(m => m.ImmunoglobulinTypeId, (SelectList)ViewBag.ImmunoglobulinTypeId, "Select Ig Type")
                        <i></i>
                        <span asp-validation-for="ImmunoglobulinTypeId" class="text-danger" ></span>
                    </label>
                </label>
            </section>
            <section class="col col-4">
                <label class="input" asp-for="DateTaken">
                    <i class="icon-append fa fa-calendar"></i>
                    <input asp-for="DateTaken" placeholder="Date Taken" class="datepicker" type="text">
                </label>
            </section>
            <section class="col col-3">
                <label class="input" asp-for="Value">
                    <input asp-for="Value" placeholder="Value">
                </label>
            </section>
        </div>
        <div class="row">
            <a href="javascript:void(0)" class="btn btn-danger remove-new-ig pull-right btn-lg" data-what="Patients immuglobuline entry" data-toggle="tooltip" data-title="Remove Patients Immuglobuline Entry?" style="padding: 5px">
                <i class="fa fa-trash"></i>
            </a>
        </div>
    </fieldset>
}