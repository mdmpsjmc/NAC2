@model AspergillosisEPR.Models.Patients.PatientMeasurement
<div class="modal fade new-measurement-modal" tabindex="-1" role="dialog" id="new-measurement-modal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">Add New Patients Measurement</h4>
            </div>
            <div class="modal-body">
                <div class="widget-body">
                    <form asp-controller="/PatientMeasurements" asp-action="Create" class="smart-form patient-measurements-visit-form" data-ajax="true" data-ajax-method="POST" id="new-measurement-form">
                        <div class="measurement-row">
                            <fieldset>
                                <input type="hidden" name="Error" id="Error" />
                                <div class="row">
                                    <section class="col col-4">
                                        <label class="input" asp-for="Weight">
                                            <i class="icon-append fa fa-question-circle"></i>
                                            <input asp-for="Weight" placeholder="Weight in kgs" class="datepicker" type="text">
                                        </label>
                                    </section>
                                    <section class="col col-4">
                                        <label class="input" asp-for="Height">
                                            <i class="icon-append fa fa-question-circle"></i>
                                            <input asp-for="Height" placeholder="Height in cm" class="datepicker" type="text">
                                        </label>
                                    </section>
                                    <input type="hidden" asp-for="DateTaken" />
                                </div>
                            </fieldset>
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-success submit-patient-visit-item"  data-form="#new-measurement-form" data-insert-into="div.measurement-form">ADD</button>
            </div>
        </div>
    </div>
</div>