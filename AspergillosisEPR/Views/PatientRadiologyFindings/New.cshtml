@model AspergillosisEPR.Models.Patients.PatientRadiologyFinding
<div class="modal fade new-radiology-modal" tabindex="-1" role="dialog" id="new-radiology-modal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">Add New Patients Radiology Finding</h4>
            </div>
            <div class="modal-body">
                <div class="widget-body">
                    <form asp-controller="PatientRadiologyFindings" asp-action="Create" class="smart-form patient-radiology-visit-form" data-ajax="true" data-ajax-method="POST" id="new-radiology-form">
                        <fieldset>
                            <div class="row">
                                <input type="hidden" asp-for="DateTaken" />
                                <section class="col col-4">
                                    <label class="select">
                                        <label asp-for="RadiologyTypeId" class="select">
                                            @Html.DropDownListFor(m => m.RadiologyTypeId, (SelectList)ViewBag.RadiologyTypeId, "Select Rad Type")
                                            <i></i>
                                            <span asp-validation-for="RadiologyTypeId" class="text-danger"></span>
                                        </label>
                                    </label>
                                </section>
                                <section class="col col-4">
                                    <label class="select">
                                        <label asp-for="FindingId" class="select">
                                            @Html.DropDownListFor(m => m.FindingId, (SelectList)ViewBag.FindingId, "Select Finding")
                                            <i></i>
                                            <span asp-validation-for="FindingId" class="text-danger"></span>
                                        </label>
                                    </label>
                                </section>
                                <section class="col col-4">
                                    <label class="select">
                                        <label asp-for="GradeId" class="select">
                                            @Html.DropDownListFor(m => m.GradeId, (SelectList)ViewBag.GradeId, "Select Grade")
                                            <i></i>
                                            <span asp-validation-for="GradeId" class="text-danger"></span>
                                        </label>
                                    </label>
                                </section>
                            </div>
                            <div class="row">
                                <section class="col col-4">
                                    <label class="select">
                                        <label asp-for="ChestLocationId" class="select">
                                            @Html.DropDownListFor(m => m.ChestLocationId, (SelectList)ViewBag.ChestLocationId, "Select Location")
                                            <i></i>
                                            <span asp-validation-for="ChestLocationId" class="text-danger"></span>
                                        </label>
                                    </label>
                                </section>
                                <section class="col col-4">
                                    <label class="select">
                                        <label asp-for="ChestDistributionId" class="select">
                                            @Html.DropDownListFor(m => m.ChestDistributionId, (SelectList)ViewBag.ChestDistributionId, "Select Distribution")
                                            <i></i>
                                            <span asp-validation-for="ChestDistributionId" class="text-danger"></span>
                                        </label>
                                    </label>
                                </section>
                                <section class="col col-4">
                                    <label class="select">
                                        <label asp-for="TreatmentResponseId" class="select">
                                            @Html.DropDownListFor(m => m.TreatmentResponseId, (SelectList)ViewBag.TreatmentResponseId, "Select Response")
                                            <i></i>
                                            <span asp-validation-for="TreatmentResponseId" class="text-danger"></span>
                                        </label>
                                    </label>
                                </section>
                            </div>
                            <div class="row">                       
                                <section class="col col-12 col-xs-12 col-md-12">
                                    <label class="textarea">
                                        <i class="icon-append fa fa-comment"></i>
                                        @Html.TextAreaFor(m => m.Note, new { @class = "comment", @rows = 2, @placeholder = "Note" })
                                    </label>
                                </section>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-success submit-patient-visit-radiology" data-form="#new-radiology-form" data-insert-into="div.radiology-form">ADD</button>
            </div>
        </div>
    </div>
</div>